@using MemeChat.Database.Repositories
@inherits LayoutComponentBase

<MudDialogProvider FullWidth="true" Position="DialogPosition.Center" CloseButton="false" CloseOnEscapeKey="true" />
<MudSnackbarProvider />
<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" Theme="theme" />

<MudLayout>
    <CascadingValue Value="@IsDarkMode">
        @Body
    </CascadingValue>
</MudLayout>

@code {
    private MudTheme theme = new();
    public bool IsDarkMode { get; set; } = false;

    private void ToggleDarkMode()
    {
        IsDarkMode = !IsDarkMode;
    }
}